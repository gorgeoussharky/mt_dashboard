{
    "author": "Mikhail Shuvalov",
    "version": "4.0.0",
    "description": "Starter project template boilerplate based on Webpack with SASS/PostCSS, ESBuild ESNext and Typescript support.",
    "browserslist": [
        "last 2 versions",
        "> 5%"
    ],
    "dependencies": {
        "@floating-ui/dom": "^1.6.3",
        "@yandex/ymaps3-types": "^0.0.28",
        "bootstrap": "^5.3.3",
        "imask": "^7.6.1",
        "jest": "^29.7.0",
        "lenis": "^1.1.13",
        "motion": "^10.18.0"
    },
    "devDependencies": {
        "@types/node": "^22.7.3",
        "@types/webpack-env": "^1.18.5",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "browserslist": "^4.24.0",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "css-declaration-sorter": "^7.2.0",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.0",
        "dotenv": "^16.4.5",
        "esbuild-loader": "^4.2.2",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-promise": "^7.1.0",
        "eslint-plugin-unicorn": "^55.0.0",
        "eslint-webpack-plugin": "^4.2.0",
        "favicons": "^7.2.0",
        "fork-ts-checker-webpack-plugin": "^9.0.2",
        "handlebars": "^4.7.8",
        "html-bundler-webpack-plugin": "^4.0.0",
        "html-validate": "^8.24.0",
        "image-minimizer-webpack-plugin": "^4.1.0",
        "image-size": "^1.1.1",
        "lightningcss": "^1.27.0",
        "postcss": "^8.4.47",
        "postcss-loader": "^8.1.1",
        "postcss-preset-env": "^10.0.5",
        "postcss-pxtorem": "^6.1.0",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.3.3",
        "sass": "^1.79.3",
        "sass-loader": "^16.0.2",
        "sharp": "^0.33.5",
        "stylelint": "^16.9.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-order": "^6.0.4",
        "stylelint-prettier": "^5.0.2",
        "stylelint-webpack-plugin": "^5.0.1",
        "svg-transform-loader": "^2.0.13",
        "svgo-loader": "^4.0.0",
        "the-new-css-reset": "^1.11.3",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "webpack": "^5.95.0",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "webpack-merge": "^6.0.1"
    },
    "engines": {
        "node": ">=22.0"
    },
    "keywords": [
        "webpack",
        "boilerplate",
        "template",
        "setup"
    ],
    "license": "MIT",
    "private": false,
    "scripts": {
        "dev": "cross-env NODE_ENV=development NODE_OPTIONS='--import=tsx' webpack serve --config configuration/webpack.development.config.ts --mode=development",
        "build": "cross-env NODE_ENV=production NODE_OPTIONS='--import=tsx' webpack --config configuration/webpack.production.config.ts",
        "build:nohash": "cross-env NODE_ENV=production NO_HASH=true NODE_OPTIONS='--import=tsx' webpack --config configuration/webpack.production.config.ts",
        "build:wp": "cross-env IS_WP=true NO_HASH=true NODE_OPTIONS='--import=tsx' webpack --config configuration/webpack.production.config.ts",
        "stats": "cross-env NODE_OPTIONS=--loader=ts-node/esm webpack --config configuration/webpack.prod.config.ts --mode=production --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
    },
    "target": "web",
    "type": "module"
}
