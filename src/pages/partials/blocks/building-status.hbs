{{assign class="status-block"}}

<div class="{{class}}">
    <div class="{{class}}__wrap">
        {{> components/status-head class="status-block__status-head" title="ФИЛАТОВСКАЯ" status="Демонтаж" }}

        {{> components/status-calendar class="status-block__status-calendar" list=list }}

        {{> components/summary-list class="status-block__summary-list" list=tasks }}

        <ul class="{{class}}__images">
            {{#each images}}
                {{> components/image-item item=this class="status-block__image-item" }}
            {{/each}}
        </ul>

        <ul class="{{class}}__additional-info">
            <li class="{{class}}__additional-info-item additional-info-item">
                <div class="additional-info-item__wrap">
                    <div class="additional-info-item__title">ОТВЕТСВЕННЫЕ</div>

                    <ul class="additional-info-item__list">
                        <li class="additional-info-item__item">
                            Стройка по безопасности — ФИО
                        </li>

                        <li class="additional-info-item__item">
                            Стройка — ФИО
                        </li>

                        <li class="additional-info-item__item">
                            Больница — ФИО
                        </li>
                    </ul>
                </div>
            </li>

            <li class="{{class}}__additional-info-item additional-info-item additional-info-item--blue">
                <div class="additional-info-item__wrap">
                    <div class="additional-info-item__title">ВОПРОСЫ ПО ОБЪЕКТУ (5)</div>

                    <ol class="additional-info-item__list">
                        <li class="additional-info-item__item">
                            Расширение помещения для большого робота карусели
                        </li>

                        <li class="additional-info-item__item">
                            Замена пандуса на входе
                        </li>

                        <li class="additional-info-item__item">
                            Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem...
                        </li>

                        <li class="additional-info-item__item">
                            Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem...
                        </li>

                        <li class="additional-info-item__item">
                            Lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem...
                        </li>
                    </ol>

                    <button type="button" aria-label="Развернуть" class="additional-info-item__expand">
                        {{> utils/sprite name="arrow" width="18" height="18" }}
                    </button>
                </div>
            </li>
        </ul>

        {{> components/data-table table=table_1 class="status-block__data-table" }}
    </div>
</div>