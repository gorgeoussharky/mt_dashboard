<div class="{{class}} accordion">
    <div class="accordion__wrap" data-accordion="{{name}}">
        <button type="button" class="accordion__toggler" data-accordion-toggle>
            {{title}} 

            <span>
                {{> components/sprite name="arrowSmall" width="10" height="10" }}
            </span>
        </button>


        
        <div class="accordion__content" data-accordion-content>
            {{#block 'accordion-content'}}{{/block}}
        </div>
    </div>
</div>