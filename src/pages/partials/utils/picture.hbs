<picture {{#if class}} class='{{class}}' {{/if}}>

    {{#if mobileSrc}}
        {{#if (isSvg mobileSrc)}}
            <source srcset='{{mobileSrc}}' type='image/svg+xml' media="(max-width: 767.98px)">
        {{/if}}

        {{#unless (isSvg mobileSrc)}}
            {{#imageSize mobileSrc unlazy}}
                <source srcset='{{src}}?w={{width}}&h={{width}}&as=avif 1x, {{src}}?as=avif 2x' type='image/avif'
                    media="(max-width: 767.98px)">
                <source srcset='{{src}}?w={{width}}&h={{width}}&as=webp 1x, {{src}}?as=webp 2x' type='image/webp'
                    media="(max-width: 767.98px)">
            {{/imageSize}}
        {{/unless}}
    {{/if}}

    {{#if (isSvg src)}}
        <img src='{{src}}' alt="{{alt}}">
    {{/if}}

    {{#unless (isSvg src)}}
        {{#imageSize src unlazy}}
            <source srcset='{{src}}?w={{width}}&h={{height}}&as=avif 1x, {{src}}?as=avif 2x' type='image/avif'>
            <img {{#unless unlazy}} loading="lazy" {{/unless}} srcset="{{src}}?as=webp 2x" width="{{baseWidth}}"
                height="{{baseHeight}}" src='{{src}}?w={{width}}&h={{height}}&as=webp' alt='{{alt}}'>
        {{/imageSize}}
    {{/unless}}
</picture>